	Escribir 'Escriba un número.'
	Leer num
	
		Si num<0 Entonces
			mientras NO (num=0) Hacer
				Escribir 'el número es: ', num
				num = num+1
			FinMientras
		SiNo
			mientras NO (num=0) Hacer
				Escribir 'el número es: ', num
				num = num-1
			FinMientras
		Fin Si
	
FinAlgoritmo